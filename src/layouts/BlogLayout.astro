---
const { post, readingTime, headings } = Astro.props;

const title = post?.title?.rendered || "";
const author = post?._embedded?.author?.[0]?.name || "Mailinfra";
const date = post?.date
  ? new Date(post.date).toLocaleDateString("en-US", {
      month: "long",
      day: "numeric",
      year: "numeric",
    })
  : "";

const featuredImage =
  post?._embedded?.["wp:featuredmedia"]?.[0]?.source_url || null;
---

<section class="bg-gradient-to-b from-blue-700 to-blue-800 text-white py-20">
  <div class="max-w-5xl mx-auto px-6">

    <h1 class="text-4xl md:text-5xl font-bold leading-tight max-w-4xl">
      {title}
    </h1>

    <div class="flex items-center gap-4 mt-6 text-blue-100">

      <div class="w-10 h-10 bg-white/30 rounded-full"></div>

      <div class="flex gap-3 text-sm">
        <span>{author}</span>
        <span>•</span>
        <span>{readingTime} min read</span>
        <span>•</span>
        <span>{date}</span>
      </div>

    </div>

  </div>
</section>


{featuredImage && (
  <div class="max-w-5xl mx-auto px-6 mt-10">
    <img
      src={featuredImage}
      class="rounded-2xl w-full"
    />
  </div>
)}


<section class="max-w-6xl mx-auto px-6 py-12 grid grid-cols-1 lg:grid-cols-4 gap-12">

  <!-- CONTENT -->
  <article class="lg:col-span-3">

    <!-- TABLE OF CONTENTS -->
    {headings.length > 0 && (
      <div class="bg-gray-50 border rounded-xl p-6 mb-10">
        <h3 class="font-semibold mb-4 text-lg">
          Table of Contents
        </h3>

        <ul class="space-y-2 text-blue-600">

          {headings.map((h) => (
            <li>
              <a href={`#${h.id}`} class="hover:underline">
                {h.text}
              </a>
            </li>
          ))}

        </ul>
      </div>
    )}


    <!-- THIS IS THE CRITICAL FIX -->
    <div class="prose prose-lg max-w-none prose-headings:scroll-mt-24">

      <slot />

    </div>

  </article>


  <!-- AUTHOR SIDEBAR -->
  <aside class="lg:col-span-1">

    <div class="border rounded-xl p-6 sticky top-24">

      <div class="flex items-center gap-3 mb-3">
        <div class="w-12 h-12 bg-gray-200 rounded-full"></div>

        <div>
          <div class="font-semibold">
            {author}
          </div>

          <div class="text-sm text-gray-500">
            Author at Mailinfra
          </div>
        </div>
      </div>

      <p class="text-sm text-gray-600">
        Writes about email infrastructure, deliverability,
        and scaling outbound systems.
      </p>

    </div>

  </aside>

</section>