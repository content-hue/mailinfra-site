---
export const prerender = false;
import BlogPostPageComponent from "../../components/blog/BlogPostPageComponent.tsx";
import "../../styles/blog.css";

export async function getStaticPaths() {
  const response = await fetch('https://cms.mailinfra.co/wp-json/wp/v2/posts?_embed&per_page=100');
  const posts = await response.json();
  return posts.map((post: any) => ({
    params: { slug: post.slug }
  }));
}

const { slug } = Astro.params;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mailinfra Blog</title>
  </head>
  <body>
    <BlogPostPageComponent client:load slug={slug!} />
  </body>
</html>